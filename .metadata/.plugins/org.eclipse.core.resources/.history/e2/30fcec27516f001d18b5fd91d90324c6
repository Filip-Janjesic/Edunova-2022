from smjer a inner join grupa b 
on a.sifra=b.smjer;

insert into smjer 
values (null,'Serviser',11999.99,500,130,false);

select a.naziv as smjer,
b.naziv as grupa, b.predavac
from smjer a 
inner join grupa b 
on a.sifra=b.smjer
where a.naziv='PHP programiranje';

